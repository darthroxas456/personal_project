if(keyboard_check_pressed(vk_enter)){ // if statment to allow the switch statement to
	switch(room){                       // run when certain conditions are met.
		case rm_start:
			room_goto(rm_game);
			break;
		
		case rm_win:
		case rm_gameover:
			game_restart();
			break;	
	}
}

if(room == rm_game){
	
	if(score >= 1000){
		room_goto(rm_win);
		audio_play_sound(snd_win,1,false); //plays the win sound
	}

	if(lives<= 0){
		room_goto(rm_gameover);
		audio_play_sound(snd_lose,1,false); //plays the lose sound
	}
}
